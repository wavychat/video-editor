{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": [
            "node",
            "dom-mediacapture-record",
            "./src/types/global"
        ],
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "paths": {
            "fabric": [
                "./src/types/fabric"
            ],
            "fabric-with-gestures": [
                "./src/types/fabric"
            ]
        }
    },
    "include": [
        "./src",
        "./node_modules/@types/fabric"
    ]
}